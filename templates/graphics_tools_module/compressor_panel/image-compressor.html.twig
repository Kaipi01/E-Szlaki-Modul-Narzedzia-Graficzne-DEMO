<div id="graphics-tools-module-compressor" class="image-compressor"> 

    <div class="modern-card">
        <div class="image-compressor__header">
            <h2 class="image-compressor__title">Kompresja obrazów</h2>
        </div>

        <div class="image-compressor__alerts" data-compressor-alerts></div>

        {% include "graphics_tools_module/components/drop-zone.html.twig" %}

    </div>

    <div data-result-table data-actions-panel class="modern-card image-compressor__actions">

        <p class="image-compressor__actions-result">
            <span data-compressor-result-message>Załaduj pliki aby rozpocząć</span> 
            <span class="image-compressor__actions-result-value" data-compressor-result-value></span>
        </p>

        <div class="image-compressor__actions-buttons" id="actionButtons"> 
            <button class="image-compressor__action-button link variant-red" id="clearButton" data-clear-button disabled>
                <i class="fa-solid fa-trash"></i> Wyczyść
            </button>

            <button class="link variant2" disabled data-download-all-btn>
                <i class="fa-solid fa-download"></i> Pobierz wszystkie grafiki
            </button>
        </div> 

    </div>

    <div data-result-table class="image-compressor__table-container">
        <div class="table-responsive-vertical">
            <table class="table table-hover table-striped">
                <thead>
                    <tr data-table-head-row>
                        <th>Podgląd</th>
                        <th>Nazwa pliku</th>
                        <th>Typ</th>
                        <th>Rozmiar</th>
                        <th>Rozmiar po kompresji</th>
                        <th>Poziom kompresji</th> 
                        <th>Status</th> 
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody data-image-table></tbody>
            </table>
            <div class="table-footer">
                {# <button class="link variant2" disabled data-download-all-btn>
                    <i class="fa-solid fa-download"></i> Pobierz wszystkie grafiki
                </button> #}
            </div>
        </div>
    </div>
</div>