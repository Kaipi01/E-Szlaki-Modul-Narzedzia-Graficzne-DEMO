<div class="advanced-tabel-container">
    <div class="table-header">
        <div class="search-box">
            <input type="text" id="searchInput" placeholder="Wyszukaj szlak...">
        </div>
    </div>

    <div class="filter-panel">
        <div class="filter-group">
            <label>Zakres dystansu (km)</label>
            <input type="range" class="range-slider" id="distanceRange" min="0" max="50" step="0.5">
            <div class="range-values">
                <span class="range-min">0</span>
                <span class="range-max">50</span>
            </div>
        </div>
        <div class="filter-group">
            <label>Zakres trudności</label>
            <input type="range" class="range-slider" id="difficultyRange" min="1" max="15" step="1">
            <div class="range-values">
                <span class="range-min">1</span>
                <span class="range-max">15</span>
            </div>
        </div>
        <div class="preset-container">
            <button class="preset-btn" data-preset="easy">Łatwe szlaki</button>
            <button class="preset-btn" data-preset="hard">Trudne szlaki</button>
            <button class="preset-btn" data-preset="long">Długie trasy</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="fantasy-table" id="trailsTable">
            <thead>
                <tr>
                    <th class="select-all-th">
                        <input type="checkbox" id="selectAll">
                    </th>
                    <th class="draggable" draggable="true" data-sort="name">Nazwa</th>
                    <th class="draggable" draggable="true" data-sort="distance">Dystans</th>
                    <th class="draggable" draggable="true" data-sort="elevation">Przewyższenie</th>
                    <th class="draggable" draggable="true" data-sort="difficulty">Trudność</th>
                    <th class="draggable" draggable="true" data-sort="location">Lokalizacja</th>
                    <th class="draggable" draggable="true" data-sort="element">Żywioł</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data will be loaded here dynamically -->
            </tbody>
        </table>
        <div class="loading">
            <div class="loading-spinner"></div>
        </div>
    </div>
</div>

<!-- Modal do edycji/dodawania -->
<div class="advanced-tabel-modal" id="trailModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">Edytuj szlak</h2>
            <button class="modal-close">&times;</button>
        </div>
        <form id="trailForm">
            <div class="form-group">
                <label>Nazwa szlaku</label>
                <input type="text" class="form-control" id="trailName" required>
            </div>
            <div class="form-group">
                <label>Dystans (km)</label>
                <input type="number" class="form-control" id="trailDistance" step="0.01" required>
            </div>
            <div class="form-group">
                <label>Przewyższenie (m)</label>
                <input type="number" class="form-control" id="trailElevation" required>
            </div>
            <div class="form-group">
                <label>Trudność (1-15)</label>
                <input type="number" class="form-control" id="trailDifficulty" min="1" max="15" required>
            </div>
            <div class="form-group">
                <label>Lokalizacja</label>
                <input type="text" class="form-control" id="trailLocation" required>
            </div>
            <div class="form-group">
                <label>Żywioł</label>
                <select class="form-control" id="trailElement" required>
                    <option value="earth">Ziemia</option>
                    <option value="fire">Ogień</option>
                    <option value="water">Woda</option>
                    <option value="air">Powietrze</option>
                    <option value="life">Życie</option>
                    <option value="magic">Magia</option>
                </select>
            </div>
            <div class="form-group">
                <label>URL obrazu</label>
                <input type="url" class="form-control" id="trailImage" required>
            </div>
            <button type="submit" class="btn btn-edit">Zapisz</button>
        </form>
    </div>
</div>